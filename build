#!/bin/bash

cd $(dirname $0)

mkdir -p source/generated
touch source/generated/slots.v

cat source/defines.v | grep '`define SLOT' | ./prepare-modes.pl > source/generated/video-modes.v

./compile lagtester && \
    md5sum output_files/lagtester.pof && \
    ls -alF output_files/lagtester.pof && \
    cat output_files/lagtester.fit.rpt | grep '; Total logic elements               ;'
